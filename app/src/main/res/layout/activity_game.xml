<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/yellow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/fontadelia"
            android:gravity="center_horizontal"
            android:text="GUNTING BATU KERTAS"
            android:textColor="@color/pink"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontadelia"
                android:text="Pemain"
                android:textColor="@color/pink"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/fontadelia"
                android:text="Komputer"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kertaspemain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tangankertas" />

            <ImageView
                android:id="@+id/kertaslawan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guntingpemain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tangangunting" />

            <ImageView
                android:id="@+id/guntinglawan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/batupemain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tanganbatu" />

            <ImageView
                android:id="@+id/batulawan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="150dp" />


        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/resetgame"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/reload"/>
    </LinearLayout>
</RelativeLayout>